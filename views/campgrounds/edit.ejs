<% layout('layouts/boilerplate') %>
  <div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
      <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" novalidate class="to-validate" enctype="multipart/form-data">
        <div class="mb-3">
          <label class="form-label" for="name">Name</label>
          <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>" id="name" required>
          <div class="invalid-feedback">
            Please provide a name for the campground.
          </div>
          <div class="valid-feedback">
            Looks good now!
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="location">Location</label>
          <input class="form-control" type="text" name="campground[location]" value="<%= campground.location %>" id="location" value="<%= campground.location %>" required>
          <div class="invalid-feedback">
            Please provide the location of the campground.
          </div>
          <div class="valid-feedback">
            Looks good now!
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="images">Image(s)</label>
          <input type="file" class="form-control" id="images" name="image" multiple aria-describedby="browseImages" aria-label="newImages">
          <!-- <label class="form-label" for="image">Add images: </label>
          <input type="file" name="image" id="image" multiple> -->
          <!-- <div class="invalid-feedback">
            Please provide the campground image url.
          </div>
          <div class="valid-feedback">
            Looks good now!
          </div> -->
        </div>
        <div class="mb-3">
          <label class="form-label" for="price">Price</label>
          <div class="input-group">
            <span class="input-group-text" id="price-label">$</span>
            <input type="text" class="form-control" id="price" name="campground[price]" placeholder="0.00" value="<%= campground.price %>" aria-label="price-label" aria-describedby="price-label" required>
            <div class="invalid-feedback">
              Please fill in the campground price.
            </div>
            <div class="valid-feedback">
              Looks good now!
            </div>
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="description">Description</label>
          <textarea class="form-control" rows="4" type="text" name="campground[description]" id="description" value="" required><%= campground.description %></textarea>
          <div class="invalid-feedback">
            Please provide a description for the campground.
          </div>
          <div class="valid-feedback">
            Looks good now!
          </div>
        </div>
        <div class="mb-3">
          <% campground.images.forEach((image, i) => {%>
            <img src="<%= image.thumbnail %>" class="img-thumbnail" alt=""/>
            <div class="form-check-inline">
              <input type="checkbox" name="deleteImages[]" id="image-<%= i %>" value="<%= image.filename %>">
            </div>
            <label for="image-<%= i %>">Delete</label>
          <% }); %> 
        </div>
        <div class="mb-3">
          <button class="btn btn-info" type="submit">Update Campground</button>
        </div>
      </form>
      <div>
        <a class="btn btn-outline-info" href="/campgrounds/<%= campground._id %>">Back to <%= campground.name %> Campground</a>
      </div>
    </div>
  </div>