<% layout('layouts/boilerplate') %>
  <div class="row">
    <div class="col-6">
      <div class="card mb-5">
        <img src="<%= campground.image %>" class="card-img-top" alt="Camp image">
        <div class="card-body">
          <h5 class="card-title"><%= campground.name %></h5>
          <p class="card-text"><%= campground.description %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item "><%= campground.location %></li>
          <li class="list-group-item">$<%= campground.price %>/Night</li>
        </ul>
        <div class="card-body">
          <a href="/campgrounds" class="card-link btn btn-info">All Camps</a>
          <a class="card-link btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit Camp</a>
          <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-6">
      <div class="mb-3">
        <h2>Leave a review</h2>
        <div class="">
          <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" novalidate class="to-validate">
            <div class="mb-3">
              <label for="rating" class="form-label">Rating</label>
              <input type="range" class="form-range" id="rating" name="review[rating]" min="1" max="5">
            </div>
            <div class="mb-3">
              <label for="review-body" class="form-label">Review</label>
              <textarea class="form-control" name="review[body]" id="review-body" cols="30" rows="3" required></textarea>
              <div class="invalid-feedback">
                Cannot submit an empty review.
              </div>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            <button type="submit" class="btn btn-success">Submit</button>
          </form>
        </div>
      </div>
      <% for(let review of campground.reviews){ %>
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title">Rating: <%= review.rating %></h5>
            <p class="card-text">Review: <%= review.body %></p>
            <!-- /campgrounds/:id/review/:reviewId -->
            <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
              <button type="submit" class=" btn btn-sm btn-danger">Delete</button>
            </form>
          </div>
        </div>
      <% } %>
    </div>
    <!-- </div> -->
  </div>